<form action="/logout">
  <div class="logout" style="margin-top:1%;margin-right:1%;">
    <p>
    <img style="text-shadow: 1px 1px rgba(0,0,0,1.00);float:right;" src="/linker/css/images/logout-button.png" onclick="document.forms[0].submit();">
    <input type="hidden" id="companyId" value="<%= req.user.companyId %>"></input>
    <input type="hidden" id="userId" value="<%= req.user.userId %>"></input>
    <input type="hidden" id="admin" value="<%= req.user.admin %>"></input>
    </p>
  </div>
</form>

<div style="clear:both;text-align:center;margin-top:20px;">
	<div class="login-subtitle" style="font-size:40px;">Taskalcloud</div>
	<div class="login-maintitle" style="font-size:70px;">自動試算システム</div>
</div>

<div class="divcenter">
  <h3 style="font-size:40px;"><%= req.user.name %></h3>
</div>

<div class="col-sm-6 col-xs-6 main" style="margin-top:80px;">
  <div class="panel-group" style="margin:0;width:100%;">
    <div class="panel-primary" style="margin:0;width:100%;">
      <div id="panel-customer" class="btn-warning mainpage-button mainpage-tab" style="margin:0;width:100%;"><h3 style="font-size:60px;font-weight:bold;">案件登録</h3></div>
    </div>
  </div>
</div>
<div id="projectDiv" class="col-sm-6 col-xs-6 main" style="display: none">
  <div class="panel-group" style="margin:0;width:100%;">
    <div class="panel-primary" style="margin:0;width:100%;">
      <div id="panel-project" class="panel-heading mainpage-button mainpage-tab" style="margin:0;width:100%;"><h3 style="font-size:60px;font-weight:bold;">案件管理</h3></div>
    </div>
  </div>
</div>
<div id="masterDiv" class="col-sm-6 col-xs-6 main" style="display: none">
  <div class="panel-group" style="margin:0;width:100%;">
    <div class="panel-primary" style="margin:0;width:100%;">
      <div id="panel-master" class="panel-heading mainpage-button mainpage-tab" style="margin:0;width:100%;"><h3 style="font-size:60px;font-weight:bold;">質問シート</h3></div>
    </div>
  </div>
</div>

<script>
  $(function(){
    // prototypeに保持
    KsWidgetTmpl.prototype.companyId = $('#companyId').val();
    KsWidgetTmpl.prototype.userId = $('#userId').val();
    
    if($('#admin').val() == '1'){
      $('#projectDiv').css('display', '');
      $('#masterDiv').css('display', '');
    }
    
    if(KsWidgetTmpl.prototype.firstLoad_main == false){
      KsWidgetTmpl.prototype.firstLoad_main = true;
      ms.login.loginSave();
    }
    
    $('#panel-customer').on("click", function(){
      location.href = "/msys/customer";
    });
    
    $('#panel-project').on("click", function(){
      location.href = "/msys/project";
    });
    
    $('#panel-master').on("click", function(){
      location.href = "/msys/master";
    });
  });
</script>